span.content
  = wrap(micropost)
span.timestamp
  ' Post
  = time_ago_in_words(micropost.created_at)
  '
  ' ago.
  = content_tag(:a,
                "Reply",
                href: "javascript:;",
                class: "hover-visiable reply-button",
                data: { name: micropost.user.name,
                        id: micropost.id })
  '
  - if current_user?(micropost.user)
    = link_to("delete", micropost, method: :delete,
                                   data: { confirm: "You sure?" },
                                   title: micropost.content,
                                   class: "hover-visiable")